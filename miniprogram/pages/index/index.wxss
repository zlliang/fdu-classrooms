page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: white;
}

.nav {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  width: 100%;
  padding-top: 4px;
  padding-bottom: 4px;
  background-color: #336DA3;
  color: white;
  z-index: 1000;
}

.sub-nav {
  white-space: nowrap;
  display: flex;
  padding-bottom: 8px;
}

.nav-item {
  display: inline-block;
  font-size: small;
  border-radius: 12px;
  padding: 6px 14px;
}

.nav-item.date {
  font-size: 12px;
}

.nav-item:first-child {
  margin-left: 16px;
}

.nav-item:last-child {
  margin-right: 16px;
}

.nav-item.choosed {
  background-color: #1B4B78;
}

.table {
  display: flex;
  flex-direction: column;
  margin-top: 9em;
  margin-bottom: 48px;
  margin-left: 16px;
  margin-right: 16px;
}

.tr {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 24px;
  padding: 8px 16px;
  background-color: #DFE7EE;
  border-radius: 16px;
}

.tr:not(:last-child) {
  margin-bottom: 8px;
}

.tr.comment {
  height: 16px;
  background: linear-gradient(to right, #DFE7EE, white 70%);
  font-size: small;
}

.comment-cell {
  display: flex;
}

.comment-item {
  color: #1B4B78;
}

.c1 {
  margin-left: 4px;
  margin-right: 16px;
}

.c2 {
  margin-left: 4px;
}

.c3 {
  margin-right: 35px;
}

.c4 {
  margin-right: 36px;
}

.c5 {
  margin-right: 13px;
}

.td.room-name {
  color: #1B4B78;
}

.td.status-list {
  display: flex;
}

.status {
  width: 10px;
  height: 16px;
  border-radius: 6px;
  margin: 1px;
}

.status.free {
  background-color: #79B663;
}


.status.inuse {
  background-color: #E95858;
}

.status.now:after {
  content: 'âˆ™';
  color: #1B4B78;
  position: relative;
  top: 9px;
  display: flex;
  justify-content: center;
  width: 10px;
  border-radius: 50%;
}

.status.loading {
  background-color: #AAAAAA;
}

.delimiter {
  width: 8px;
}

@media (prefers-color-scheme: dark) {
  page {
    background-color: #08141F;
  }
  .nav {
    color: #B2C3D2;
    background-color: #0B2843;
  }
  .nav-item.choosed {
    background-color: #08141F;
  }
  .tr {
    background-color: #0B2843;
  }
  .tr.comment {
    background: linear-gradient(to right, #0B2843, #08141F 70%);
  }
  .comment-item {
    color: #B2C3D2;
  }
  .td.room-name {
    color: #B2C3D2;
  }

  .status.free {
    background-color: #4B8437;
  }
  
  .status.inuse {
    background-color: #A72F2F;
  }

  .status.now:after {
    color: #336DA3;
  }
  
  .status.loading {
    background-color: #555555;
  }
}